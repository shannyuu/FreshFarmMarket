@page
@using Microsoft.Extensions.Options
@using FreshFarmMarket.Models
@using AspNetCore.ReCaptcha
@model FreshFarmMarket.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
	<div class="card mx-auto" style="max-width:560px; margin-top:40px;">
		<article class="card-body">
		<header class="mb-4"><h4 class="card-title">@ViewData["Title"]</h4></header>
		<form method="post" id="loginForm">
			<div class="form-group ">
				<label asp-for="LModel.Email"></label>
				<input class="form-control" placeholder="Enter your email" asp-for="LModel.Email">
				<span asp-validation-for="LModel.Email" class="text-danger"></span>
			</div> <!-- form-group end.// -->

			<div class="form-group">
				<label asp-for="LModel.Password">Password</label>
				<input class="form-control" placeholder="Enter your password" asp-for="LModel.Password">
				<span asp-validation-for="LModel.Password" class="text-danger"></span>
			</div> <!-- form-group end.// --> 

			<div class="mb-3 form-check">
				<input type="checkbox" asp-for="LModel.RememberMe" class="form-check-input" />
				<label class="form-check-label" asp-for="LModel.RememberMe">Remember Me?</label>
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block">Login</button>
			</div> <!-- form-group// -->   
			<recaptcha />
		
		</form>
		</article><!-- card-body.// -->
	</div> <!-- card .// -->

	<p class="text-center mt-4">Don't have an account? <a href="/Register">Register here</a></p>
	<br><br>
