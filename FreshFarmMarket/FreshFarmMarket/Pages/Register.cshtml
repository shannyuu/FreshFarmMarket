@page
@model FreshFarmMarket.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="card mx-auto" style="max-width:700px; margin-top:40px;">
    <article class="card-body">
	<header class="mb-4"><h4 class="card-title">@ViewData["Title"]</h4></header>

	<form method="post"> 
		<div class="form-group">
			<label asp-for="RModel.FullName"></label>
			<input class="form-control" placeholder="Enter your full name" asp-for="RModel.FullName">
			<span asp-validation-for="RModel.FullName" class="text-danger"></span>
		</div> <!-- form-group end.// -->

		<div class="form-row">
			<div class="form-group ">
				<label asp-for="RModel.CreditCardNo"></label>
				<input class="form-control" placeholder="Enter your credit card no. here" asp-for="RModel.CreditCardNo">
				<span asp-validation-for="RModel.CreditCardNo" class="text-danger"></span>
			</div> <!-- form-group end.// -->

			<div class="form-group">
				<div class="custom-control custom-radio custom-control-inline">
					@Html.RadioButtonFor(m => m.RModel.Gender, "M", new {@class = "form-check-input"})
					<label class="form-check-label">Male</label>
				</div>
				<div class="custom-control custom-radio custom-control-inline">
					@Html.RadioButtonFor(m => m.RModel.Gender, "F", new {@class = "form-check-input"})
					<label class="form-check-label">Female</label>
				</div>
				<span asp-validation-for="RModel.Gender" class="text-danger"></span>
			</div> <!-- form-group end.// -->
		</div> <!-- form-row end.// -->

		<div class="form-row">

			<div class="col-md-6 form-group ">
				<label asp-for="RModel.MobileNo"></label>
				<input class="form-control" placeholder="Enter your mobile no." asp-for="RModel.MobileNo">
				<span asp-validation-for="RModel.MobileNo" class="text-danger"></span>
			</div> <!-- form-group end.// -->

			<div class="col-md-6 form-group ">
				<label asp-for="RModel.Email"></label>
				<input class="form-control" placeholder="Enter your email" asp-for="RModel.Email">
				<span asp-validation-for="RModel.Email" class="text-danger"></span>
			</div> <!-- form-group end.// -->
		</div> <!-- form-row end.// -->

		<div class="form-group">
			<label asp-for="RModel.DeliveryAddress"></label>
			<input class="form-control" placeholder="Enter your address" asp-for="RModel.DeliveryAddress">
			<span asp-validation-for="RModel.DeliveryAddress" class="text-danger"></span>
		</div> <!-- form-group.// -->

		<div class="form-row">
			<div class="form-group col-md-6">
				<label asp-for="RModel.Password">Password</label>
				<input class="form-control" placeholder="Enter your password" asp-for="RModel.Password">
				<span asp-validation-for="RModel.Password" class="text-danger"></span>
			</div> <!-- form-group end.// --> 

			<div class="form-group col-md-6">
				<label asp-for="RModel.ConfirmPassword">Re-enter password</label>
				<input class="form-control" placeholder="Enter your password" asp-for="RModel.ConfirmPassword">
				<span asp-validation-for="RModel.ConfirmPassword" class="text-danger"></span>
			</div> <!-- form-group end.// -->  
		</div>

		<div class="form-group">
			<label asp-for="RModel.AboutMe"></label>
			<input class="form-control" placeholder="Write something about yourself" asp-for="RModel.AboutMe">
			<span asp-validation-for="RModel.AboutMe" class="text-danger"></span>
		</div> <!-- form-group.// -->

		<div class="form-group">
			<button type="submit" class="btn btn-primary btn-block"> Register  </button>
		</div> <!-- form-group// -->      				
	</form>

	</article><!-- card-body.// -->
</div> <!-- card .// -->

<p class="text-center mt-4">Have an account? <a href="/Login">Log In</a></p>
<br><br>
